# Databricks
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-token
DATABRICKS_WAREHOUSE_ID=

# Unity Catalog volume for pipeline storage (when DATABRICKS_HOST is set)
# Create volume first: CREATE VOLUME IF NOT EXISTS main.main.lakestream_pipelines;
DATABRICKS_CATALOG=main
DATABRICKS_SCHEMA=main

# Schema Registry (optional, for Kafka Avro/Protobuf)
SCHEMA_REGISTRY_URL=

# Frontend API URL (used by Next.js to call backend)
NEXT_PUBLIC_API_URL=http://localhost:8000
